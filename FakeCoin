#include <iostream>
#include <vector>

using namespace std;

int Peso(vector<int>& v, int begin, int end) {
    int soma = 0;
    for (int i = begin; i != end; i++) {
        soma += v[i];
    }
    return soma;
}

int FakeCoin(vector<int>& v, int begin, int end) {
    if ((end - begin) > 1) {
        if (Peso(v, begin, (begin + end) / 2) > Peso(v, ((begin + end) / 2), end)) {
            FakeCoin(v, begin, (begin + end) / 2);
        }
        else {            
            FakeCoin(v, (begin + end) / 2, end);
        }        
    }
    else {
        return (v[begin] > v[end]) ? begin : end;
    }

}

int main()
{
    vector<int> v;
    for (int i = 1; i < 15; i++) {
        v.push_back({ 1 });
    }

    v.emplace(v.begin() + 3, 2);

    int result = FakeCoin(v, 0, v.size() - 1);
    cout << result << endl;
}
